{
  "info": {
    "name": "AuthService API Collection",
    "_postman_id": "d7f1c2e4-8a42-4b8a-b9c3-9a1f5a6e1c11",
    "description": "Postman collection to test AuthService APIs including user signup, login, and JWT refresh flow.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Sign Up",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john.doe\",\n  \"password\": \"Test@1234\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone_number\": 1234567890\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/v1/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth", "v1", "signup"]
        },
        "description": "Registers a new user. Returns JWT access token and refresh token."
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john.doe\",\n  \"password\": \"Test@1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/v1/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth", "v1", "login"]
        },
        "description": "Logs in an existing user. Returns JWT access token and refresh token."
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"<paste-refresh-token-here>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/v1/refreshToken",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth", "v1", "refreshToken"]
        },
        "description": "Generates a new JWT access token using the provided refresh token."
      }
    }
  ]
}
